@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Orders";
}

@using CellphoneStore.Models
@using System.Globalization
@model List<Order>

<div class="row">
    <div class="col-12">
        <h2>Tất cả đơn hàng của bạn</h2>
    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Tổng giá</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    @{
                       string birthday = String.Format("{0:dd/MM/yyyy}",item.Orderdate);
                    }
                    <td>@birthday</td>
                    <td>@item.Total.ToString("C",CultureInfo.CreateSpecificCulture("vn-VN")).Substring(1).Replace(",",".")đ</td>
                    <td><a href="/Authentication/OrdersDetails/@item.Id">Chi tiết</a></td>
                </tr>
            }

    </table>
</div>

@section Styles{
<link rel="stylesheet" href="~/css/cart.css">
}